<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PrismMultipleRegionApp.Views"
             xmlns:Prism="http://prismlibrary.com/"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:Views="clr-namespace:PrismMultipleRegionApp.Views"
             x:Class="PrismMultipleRegionApp.Views.ViewA"
             Prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid>
        <i:Interaction.Triggers>
            <Prism:InteractionRequestTrigger SourceObject="{Binding ShowNewWindowRequest}">
                <Prism:PopupWindowAction IsModal="True"
                                         CenterOverAssociatedObject="True">
                    <Prism:PopupWindowAction.WindowContent>
                        <Views:ViewB />
                    </Prism:PopupWindowAction.WindowContent>
                </Prism:PopupWindowAction>
            </Prism:InteractionRequestTrigger>
        </i:Interaction.Triggers>
        <Button Content="ShowWindow"
                Command="{Binding ShowWindowCommand}" />
    </Grid>
</UserControl>
